@{
    ViewData["Title"] = "Forgot Password";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
<link href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" />
<link href="~/vendor/animate/animate.css" rel="stylesheet" />
<link href="~/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
<link href="~/vendor/animsition/css/animsition.css" rel="stylesheet" />
<link href="~/vendor/select2/select2.min.css" rel="stylesheet" />
<link href="~/css/util.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/css/main.css">
<style>
    .container {
        max-width: 100%;
        padding: 0;
    }

    .footer {
        background-color: #1dc2e2;
    }

    .pv {
        color: black;
    }

    .forget-form {
        background: #fff;
        width: 630px;
        margin-top: 72px !important;
        margin: 0px auto;
        padding: 20px 56px;
        border-radius: 7px;
        box-shadow: 12px 9px 8px -5px #00000040;
    }

    body {
        background-image: url('/Images/bg-01.jpg');
    }

    .heading_tittle.text-center h3 {
        font-size: 46px;
        padding-top: 30px;
        color: #000 !important;
    }

    .row-forget .col-md-12 {
        width: 100%;
        padding: 0px;
    }

    .footer-forget h5.text-center {
        font-size: 17px !important;
        margin-bottom: 10px;
    }

    .row.mt-5 {
        margin-top: 30px !important;
        margin-bottom: 40px;
    }

    .footer-forget h5.text-center a {
        font-size: 20px;
        color: #9c18a4;
        font-weight: 800 !important;
        padding-left: 3px;
    }
</style>
<nav>
    <div class="toggle-wrap">
        <span class="toggle-bar"></span>
    </div>
    <hgroup>
    </hgroup>
</nav>
<aside>
    <a href="/Home/About">About Us</a>
    <a href="/Home/Mission">Mission</a>
    <a href="/Home/ContactUs">Contact Us</a>
    <a href="/Home/PrivacyPolicy">Privacy Policy</a>
    <a href="/AppUsers/Index">Login</a>
</aside>
<div class="forget-form">
    @using (Html.BeginForm())
    {


        <div class="heading_tittle text-center">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-black-50">Reset password</h3>
        </div>

        <div class="row-forget">
            <div class="col-md-12">Please enter email address</div>
            <div class="col-md-12">
                @Html.TextBox("email", "", new { @class = "form-control" })
                @if (ViewBag.NotValidEmail)
                {<span id="companyerror" class="error text-danger">Please provide valid email.</span>}
            </div>

        </div>
        <div class="row mt-5">
            <div class="col-md-12"><input type="submit" value="Submit" class="login100-form-btn" /></div>
        </div>
        <div class="footer-forget">
            <h5 class="text-center">New here? <a href="/AppUsers/Index">Sign Up.</a></h5>
            <h5 class="text-center">Already have an account? <a href="/AppUsers/Register">Sign In.</a></h5>
        </div>
    }
</div>
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" />
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script>
        (function () {
            $('.toggle-wrap').on('click', function () {
                $(this).toggleClass('active');
                $('aside').animate({ width: 'toggle' }, 200);
            });
        })();
</script>
