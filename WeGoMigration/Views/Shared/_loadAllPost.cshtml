<script>
    $(document).ready(function () {
        $('.btn btn-success').click(function () {
            var postId = $('#editPost').val();
            alert(postId);
        });

        $('.editComment').click(function () {
            if ($(this).val() == 'Edit Comment') {
                $(this).parent().parent().find('.txtEditComment').prop("readonly", false).css('border', '2px solid black');;
                $(this).parent().parent().find('.txtEditComment')
                $(this).val('Update')
            }
            else if ($(this).val() == 'Update') {
                $(this).parent().parent().find('.txtEditComment').prop("readonly", true);
                $(this).val('Edit Comment');
                var postId = $(this).parent().parent().find('.txtEditComment').attr('postId');
                var commentId = $(this).parent().parent().find('.txtEditComment').attr('commentId');
                SaveComment(postId, commentId, 2);
            }
        });


        $('.postcomment').click(function () {
            var postId = $(this).attr("postid");
            var commentBox = '<div class="row"><textarea style="width: 200px; height: 100px; left: 621.869px; top: 1817.95px;" id=cmt' + postId + '></textarea> <span class="btn-comment" onclick=SaveComment(' + postId + ',0,1)> save comment </span> </div>';
            $(this).parent().find('#comments-container').append(commentBox);
            $(this).hide();
        });

    });

    function SaveComment(postId, commentId, ot) {

        var cmtControl, txtareaValue
        if (ot == 1) {
            cmtControl = '#cmt' + postId;
            txtareaValue = $(cmtControl).val();
        }
        else {
            cmtControl = '#cmt' + commentId;
            txtareaValue = $(cmtControl).val();
        }

        var formData = new FormData();
        formData.append("postId", postId);
        formData.append("commentValue", txtareaValue);
        formData.append("commentId", commentId);
        formData.append("UserId", $("#hdnAppUserId").val());
        $.ajax({
            url: ("/AppUsers/SaveUpdateComment"),
            type: "POST",
            data: formData,
            contentType: false,
            processData: false,
            mimeType: 'multipart/form-data',
            success: function (response) {
                window.location.reload();
            },
            error: function (er) {
                alert(er);
            }
        });

    }
    function DeleteComment(commentId) {
        $.ajax({
            type: "GET",
            url: "/AppUsers/DeleteComment?commentId=" + commentId,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                window.location.reload();
                //console.log(response)
            },
            failure: function (response) {
                //alert(response.d);
            },
            error: function (response) {
                //alert(response.d);
            }
        });
    }
</script>